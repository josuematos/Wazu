<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.editorapendragon.wazu.MapsActivity"
    tools:showIn="@layout/activity_maps">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_face"
        android:id="@+id/rlPrefs"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerInParent="true">
        <FrameLayout
            android:id="@+id/fltitPrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Preferências:"
                android:id="@+id/TituloPreferencias"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flTrafego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fltitPrefs">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Visualizar Tráfego: "
                android:id="@+id/txttw1"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="left|center_vertical"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/swTrafego"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="right"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flSom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/flTrafego">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Alarme com som: "
                android:id="@+id/txttw10"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="left|center_vertical"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/swSom"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="right"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flVibra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/flSom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Alarme com vibração: "
                android:id="@+id/txttw2"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="left|center_vertical"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/swVibra"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="right"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp"
                android:textAlignment="textStart"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flAlarme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/flVibra">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tocar Alarme "
                android:id="@+id/txtAlarme1"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="left"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:textAlignment="textStart"/>
            <EditText
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/edtAlarme"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:textStyle="normal"
                android:background="#fff9"
                android:textAlignment="textStart"
                android:layout_gravity="right|center_vertical"
                android:inputType="number"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" metros antes do destino."
                android:id="@+id/txtAlarme2"
                android:textColor="#000"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:layout_gravity="right"
                android:textStyle="normal"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flGravarPrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/flAlarme">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gravar"
                android:id="@+id/btPrefs"
                android:onClick="funcGravarPrefs"
                android:layout_below="@+id/edtAlarme"
            android:layout_gravity="right"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
