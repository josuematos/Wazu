<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/rlAlertasList"
    android:layout_centerInParent="true"
    android:background="@null">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flL2"
        android:paddingTop="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/txtVerAlertasLat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/txtVerAlertasLng"/>
        <TextView
            android:id="@+id/txtTitVerAlertaUsuario"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Informante: "
            android:textColor="#000"
            android:shadowColor="#fff"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:background="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />
        <TextView
            android:id="@+id/txtVerAlertaUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#000"
            android:shadowColor="#fff"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:background="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="90dp" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flL2">
    <TextView
        android:id="@+id/txtVerAlertaComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:shadowColor="#fff"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:padding="15dp"/>
    </FrameLayout>
</RelativeLayout>